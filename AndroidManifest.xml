<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meusdireitos"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/nome_aplicacao"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.meusdireitos.activity.MainActivity"
            android:label="@string/meusdireitosHeader" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meusdireitos.activity.ServicosActivity"
            android:label="@string/servicosHeader" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.meusdireitos.activity.ProdutosActivity"
            android:label="@string/produtosHeader" >
        </activity>
        <activity
            android:name="com.meusdireitos.activity.ContatoActivity"
            android:label="@string/contatoHeader" >
        </activity>
    </application>

</manifest>